<% layout("/layouts/boilerplate")%>
          <div class="row mt-3">
    <div class="col-8 offset-2">
    <h3>Listings details:</h3>
    <br>
     <div class="card">
    <img src="<%= listing.image.url ? listing.image.url : listing.image %>" class="card-img-top show-img" alt="listing_image" style="height: 20rem"/>
     <div class="card-body">
      <p class="card-text">
         <%=listing.title %> <br>
         <%=listing.description %> <br>
          &#8377;<%= listing.price.toLocaleString("en-IN") %> <br>
          <%= listing.location %> <br>
          <%= listing.country %>
      </p>
     </div>
     </div>
                 <div class="col-1">
                   <a href="/listings/<%=listing.id%>/edit" class="btn btn-dark edit-btn"> Edit </a>
                 </div>
               
                <div class="col-1">
                <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
                  <br>
                  <button class="btn btn-dark">Delete</button>
                </form>
                </div>
                  </div>
                   </div>
   

         

